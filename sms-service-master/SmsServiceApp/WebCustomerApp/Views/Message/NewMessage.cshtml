@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@using WebCustomerApp.Models.MessageViewModels
@model CreateViewModel
@*@inject SignInManager<ApplicationUser> SignInManager*@

@{
	ViewData["Title"] = "New message";
}

@{
	Layout = "/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
	<div class="col-md-4">
		<form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
			<section>

				<div class="form-group">
					<label asp-for="RecepientPhone"></label>
					<input asp-for="RecepientPhone" class="form-control" />
					<span asp-validation-for="RecepientPhone" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label asp-for="RecepientName"></label>
					<input asp-for="RecepientName" class="form-control" />
					<span asp-validation-for="RecepientName" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label asp-for="MessageText"></label>
					<input asp-for="MessageText" class="form-control" />
					<span asp-validation-for="MessageText" class="text-danger"></span>
				</div>

				<button type="submit" class="btn btn-default">Send</button>
			</section>
		</form>
	</div>
</div>